<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample.hello.dao.VoteMapper">  <!--这个和我们的dao接口类的名称相同-->


<resultMap id="BaseResultMap" type="sample.hello.bean.business.VoteSubjectItem" >
    <result column="onlineItemItemId" property="ItemId" jdbcType="VARCHAR" />
      <result column="onlineUseruserID" property="personId" jdbcType="VARCHAR" />
    <result column="onlineSubjectsubjectId" property="subjectId" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, name
  </sql>
  <select id="getList" resultMap="BaseResultMap" >
    select
    <include refid="Base_Column_List" />
    from test
  </select>
  
  <insert id="userVote" parameterType="sample.hello.bean.business.VoteSubjectItem">
INSERT INTO `testaa`.`onlineusersubjectitemrecord` 
	(`time`, 
	`onlineUseruserID`, 
	`onlineItemItemId`, 
	`onlineSubjectsubjectId`
	)
	VALUES
	(now(), 
	#{personId}, 
	#{ItemId}, 
	#{subjectId}
	);
  </insert>
</mapper>