<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sample.hello.dao.UserMapper">  <!--这个和我们的dao接口类的名称相同-->


<resultMap id="BaseResultMap" type="sample.hello.bean.Person" >
    <result column="userID" property="personId" jdbcType="VARCHAR" />
    <result column="userPassword" property="personPassword" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="login" parameterType="sample.hello.bean.Person" resultMap="BaseResultMap">
	SELECT 	userID   FROM onlineuser  where userID= #{personId} and userPassword=#{personPassword}
  </select>
  
</mapper>